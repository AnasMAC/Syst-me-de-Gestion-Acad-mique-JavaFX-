<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.gestionacademique.Controllers.CoursController">

    <left>
        <VBox spacing="15.0" prefWidth="320.0" style="-fx-background-color: #ECEFF1; -fx-border-color: #CFD8DC; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <Label text="Gestion des Cours" textFill="#37474F">
                <font>
                    <Font name="System Bold" size="22.0"/>
                </font>
            </Label>

            <TextField fx:id="txtId" visible="false" managed="false"/>

            <VBox spacing="5.0">
                <Label text="Code" textFill="#546E7A"><font><Font name="System Bold" size="12.0"/></font></Label>
                <TextField fx:id="txtCode" promptText="Ex: JAVA-101" style="-fx-background-radius: 5; -fx-padding: 8;"/>
            </VBox>

            <VBox spacing="5.0">
                <Label text="Intitulé" textFill="#546E7A"><font><Font name="System Bold" size="12.0"/></font></Label>
                <TextField fx:id="txtIntitule" promptText="Ex: Algorithmique" style="-fx-background-radius: 5; -fx-padding: 8;"/>
            </VBox>

            <Separator />

            <VBox spacing="8.0">
                <Label text="Assigner à la formation :" textFill="#546E7A">
                    <font><Font name="System Bold" size="12.0"/></font>
                </Label>
                <VBox fx:id="vboxRadios" spacing="5.0" />
            </VBox>

            <Separator />

            <HBox spacing="10.0">
                <Button text="Ajouter" fx:id="btnAdd" onAction="#onCreate" prefWidth="120.0"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                <Button text="Modifier" fx:id="btnUpdate" onAction="#onUpdate" disable="true" prefWidth="120.0"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>
            <HBox spacing="10.0">
                <Button text="Supprimer" fx:id="btnDelete" onAction="#onDelete" disable="true" prefWidth="120.0"
                        style="-fx-background-color: #EF5350; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                <Button text="Vider" onAction="#onClear" prefWidth="120.0"
                        style="-fx-background-color: #78909C; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </left>

    <center>
        <VBox spacing="15.0" style="-fx-background-color: white;">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label text="Liste des Cours" textFill="#607D8B">
                    <font><Font size="16.0"/></font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Voir cours de :" textFill="#546E7A"/>

                <ComboBox fx:id="cbFilter" promptText="Toutes les formations" prefWidth="180.0" onAction="#onFilter"/>

                <Button text="Reset" onAction="#onResetFilter" style="-fx-background-color: transparent; -fx-text-fill: #607D8B; -fx-underline: true; -fx-cursor: hand;"/>
            </HBox>

            <TableView fx:id="tableCours" VBox.vgrow="ALWAYS" style="-fx-border-color: #CFD8DC; -fx-background-radius: 5;">
                <columns>
                    <TableColumn fx:id="colId" text="#" prefWidth="50.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colCode" text="Code" prefWidth="100.0" style="-fx-font-weight: bold;"/>
                    <TableColumn fx:id="colIntitule" text="Intitulé" prefWidth="250.0" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>