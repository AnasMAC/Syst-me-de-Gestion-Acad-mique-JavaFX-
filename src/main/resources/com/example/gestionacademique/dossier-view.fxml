<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.gestionacademique.Controllers.DossierController">

    <left>
        <VBox spacing="15.0" prefWidth="300.0" style="-fx-background-color: #ECEFF1; -fx-border-color: #CFD8DC; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <Label text="Dossier Administratif" textFill="#37474F">
                <font>
                    <Font name="System Bold" size="22.0"/>
                </font>
            </Label>

            <TextField fx:id="txtId" visible="false" managed="false"/>

            <VBox spacing="5.0">
                <Label text="N° Inscription" textFill="#546E7A">
                    <font><Font name="System Bold" size="12.0"/></font>
                </Label>
                <TextField fx:id="txtNumero" promptText="Ex: MAT-2025-XXX" style="-fx-background-radius: 5; -fx-padding: 8;"/>
            </VBox>

            <VBox spacing="5.0">
                <Label text="Date de Création" textFill="#546E7A">
                    <font><Font name="System Bold" size="12.0"/></font>
                </Label>
                <DatePicker fx:id="dpDate" promptText="JJ/MM/AAAA" style="-fx-background-radius: 5;"/>
            </VBox>

            <VBox spacing="5.0">
                <Label text="ID Étudiant" textFill="#546E7A">
                    <font><Font name="System Bold" size="12.0"/></font>
                </Label>
                <TextField fx:id="txtStudentId" promptText="Ex: 15" style="-fx-background-radius: 5; -fx-padding: 8;"/>
            </VBox>

            <VBox prefHeight="20.0" />

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button text="Ajouter" fx:id="btnAdd" onAction="#onCreate" prefWidth="120.0"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                <Button text="Modifier" fx:id="btnUpdate" onAction="#onUpdate" disable="true" prefWidth="120.0"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button text="Supprimer" fx:id="btnDelete" onAction="#onDelete" disable="true" prefWidth="120.0"
                        style="-fx-background-color: #EF5350; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                <Button text="Vider" onAction="#onClear" prefWidth="120.0"
                        style="-fx-background-color: #78909C; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </left>

    <center>
        <VBox spacing="15.0" style="-fx-background-color: white;">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Liste des Dossiers" textFill="#607D8B">
                    <font><Font size="16.0"/></font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Recherche :" textFill="#546E7A"/>
                <TextField fx:id="txtSearch" promptText="Nom de l'étudiant..." onKeyReleased="#onSearch" />
            </HBox>

            <TableView fx:id="tableDossier" VBox.vgrow="ALWAYS" style="-fx-border-color: #CFD8DC; -fx-background-radius: 5;">
                <columns>
                    <TableColumn fx:id="colId" text="#" prefWidth="50.0" reorderable="false" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colNumero" text="Matricule" prefWidth="150.0" style="-fx-font-weight: bold;" />
                    <TableColumn fx:id="colDate" text="Date Création" prefWidth="120.0" />
                    <TableColumn fx:id="colStudentName" text="Nom Étudiant" prefWidth="150.0" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>