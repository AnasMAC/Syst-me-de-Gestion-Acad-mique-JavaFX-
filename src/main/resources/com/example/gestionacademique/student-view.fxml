<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestionacademique.Controllers.StudentController">

    <left>
        <VBox prefWidth="300.0" spacing="15.0" style="-fx-background-color: #ECEFF1; -fx-border-color: #CFD8DC; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>

            <Label text="Gestion Étudiants" textFill="#37474F">
                <font>
                    <Font name="System Bold" size="22.0" />
                </font>
            </Label>

            <TextField fx:id="txtId" managed="false" visible="false" />

            <VBox spacing="5.0">
                <Label text="Nom Complet" textFill="#546E7A">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Label>
                <TextField fx:id="txtName" promptText="Ex: Jean Dupont" style="-fx-padding: 8; -fx-background-radius: 5;" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="Moyenne (0 - 20)" textFill="#546E7A">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Label>
                <TextField fx:id="txtMoyenne" promptText="Ex: 14.5" style="-fx-padding: 8; -fx-background-radius: 5;" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="Formation" textFill="#546E7A">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Label>
            <ComboBox fx:id="cbChoseformation" prefWidth="150.0" promptText="Choisir..." />
            </VBox>

            <VBox prefHeight="20.0" />

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button fx:id="btnAdd" onAction="#onCreate" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Ajouter" />
                <Button fx:id="btnUpdate" disable="true" onAction="#onUpdate" prefWidth="120.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Modifier" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button fx:id="btnDelete" disable="true" onAction="#onDelete" prefWidth="120.0" style="-fx-background-color: #EF5350; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Supprimer" />
                <Button onAction="#onClear" prefWidth="120.0" style="-fx-background-color: #78909C; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Vider" />
            </HBox>
        </VBox>
    </left>

    <center>
        <VBox spacing="15.0" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label text="Liste des Étudiants" textFill="#607D8B">
                    <font><Font size="16.0" /></font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Filtrer par Formation:" textFill="#546E7A" />

                <ComboBox fx:id="cbFilterFormation" prefWidth="150.0" promptText="Choisir..." />

                <Button onAction="#onFilter" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-cursor: hand;" text="Filtrer" />

                <Button onAction="#onResetFilter" style="-fx-background-color: transparent; -fx-text-fill: #607D8B; -fx-underline: true; -fx-cursor: hand;" text="Tout Afficher" />
            </HBox>

            <TableView fx:id="tableStudent" style="-fx-border-color: #CFD8DC; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50.0" reorderable="false" style="-fx-alignment: CENTER;" text="#" />
                    <TableColumn fx:id="colName" prefWidth="150.0" text="Nom" />
                    <TableColumn fx:id="colMoyenne" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Moyenne" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>
